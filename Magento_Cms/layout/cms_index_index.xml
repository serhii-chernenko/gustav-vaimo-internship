<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="custom.modal" template="Magento_Theme::modal.phtml">
                <block class="Magento\Newsletter\Block\Subscribe" name="custom.modal.newsletter" template="Magento_Theme::custom-subscribe.phtml"/>
                <block name="cms.modal.image.block" class="Magento\Cms\Block\Block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">modal-image-block</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>

        <referenceContainer name="content">
            <block name="custom.test" template="Magento_Theme::custom-test.phtml" before="-" />
        </referenceContainer>

        <referenceContainer name="content">
            <block name="custom.post.form" template="Magento_Theme::custom-post-form.phtml" before="custom-test.phtml" />
        </referenceContainer>
    </body>
</page>
